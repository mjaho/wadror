<h1>Listing styles</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Style</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.style %></td>
        <td><%= style.description %></td>
        <td><%= link_to 'Show', style, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_style_path(style), class:'btn btn-info' %></td>
        <td><%= link_to 'Destroy', style, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

